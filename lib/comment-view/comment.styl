.comments-list
  list-style-type: none
  margin: 18px 10px
  padding: 0

  .text
    white-space: pre-line

  li
    display: block
    margin: 18px 0 18px 48px
    min-height: 48px

  .name
    color: #899

  .time
    padding: 0 1em
    font-size: smaller
    color: #ECF0F1
    text-transform: uppercase

  a.link
    color: inherit
    text-decoration: none

  a.link:hover
    text-decoration: underline

  img.avatar
    width : 36px
    height: 36px
    margin-left: -46px
