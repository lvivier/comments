/**
 * Dependencies
 */

@import 'nib/vendor'

/**
 * User View
 */
.comments-user
  margin: 18px 10px
  color: #888
  padding: 0 0 0 48px

  .message
    box-sizing: border-box
    border-radius: 4px
    border: 2px solid #ECF0F1
    font-family: sans-serif
    font-size: 18px
    line-height: 24px
    height: 48px
    width: 100%
    padding: 10px 9px
    transition: height 0.2s ease-out, border-color 0.2s

  .message:focus
    border-color: #1ABC9C
    height: 96px
    outline: none

  button.send
    background: #95A5A6
    margin: 0
    font-size: 14px
    float: right
    padding: 9px 18px

  button.send:hover
    background: #34495E
    opacity: 1

  button.twitter
    background: #00acee

  button.facebook
    background: #3b5998

  button.logout
    margin: 0

  img.avatar
    margin-left: -58px
